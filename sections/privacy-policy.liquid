<section class="privacy-policy section">
    <div class="page-width">
        <h1 class="h1">{{ section.settings.heading | escape }}</h1>
        <div class="rte">
            {{ section.settings.body }}
        </div>
    </div>
</section>

{% schema %}
{
  "name": "Política de Privacidad (simple)",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título (H1)",
      "default": "Política de Privacidad"
    },
    {
      "type": "richtext",
      "id": "body",
      "label": "Contenido",
      "default": "<p>Pega aquí tu política de privacidad.</p>"
    }
  ],
  "presets": [
    { "name": "Política de Privacidad (simple)" }
  ]
}
{% endschema %}
